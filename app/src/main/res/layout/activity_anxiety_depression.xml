<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnxietyDepression">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/AnxietyTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anxiety/Depression Help"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                />

            <ImageView
                android:id="@+id/AnxArt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/anx1" />

            <TextView
                android:id="@+id/AnxText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overcoming Anxiety - Harvard"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/AnxArt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/anx2" />

            <TextView
                android:id="@+id/AnxText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Types of anxiety and ways to overcome them"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/AnxArt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/anx3" />

            <TextView
                android:id="@+id/AnxText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11 tips for coping with an anxiety disorder"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/AnxArt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/anx4" />

            <TextView
                android:id="@+id/AnxText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anxiety in Children and Teens: A Parentâ€™s Guide"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/AnxArt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/anx5" />

            <TextView
                android:id="@+id/AnxText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Help Someone with Anxiety"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>