<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Gambling">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/GamblingTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gambling Addiction Help"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                />
            <ImageView
                android:id="@+id/GamblingArt1"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                app:srcCompat="@drawable/gamblingart1" />

            <TextView
                android:id="@+id/GamblingText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="How To Stop Gambling: 6 Helpful Tips From Experts" />

            <ImageView
                android:id="@+id/GamblingArt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/gamblingart2" />

            <TextView
                android:id="@+id/GamblingText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="You Can Overcome Gambling Addiction" />

            <ImageView
                android:id="@+id/GamblingArt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/gamblingart3" />

            <TextView
                android:id="@+id/GamblingText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Gambling Addiction and Problem Gambling" />

            <ImageView
                android:id="@+id/GamblingArt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/gamblingart4" />

            <TextView
                android:id="@+id/GamblingText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Gambling risks are rising for young people. How to lower the stakes" />

            <ImageView
                android:id="@+id/GamblingArt5"
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/gamblingart5" />

            <TextView
                android:id="@+id/GamblingText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:text="How to Stop Betting on Sports" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>